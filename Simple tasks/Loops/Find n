//Задано натуральне число n. Обчислити: 1*2+2*3*4+...+n*(n+1)..2n

public class Pr2For2 {
     public static void main(String args[]){
        Scanner sc = new Scanner(System.in); 
                
       int P=0;
       int e=1;
System.out.println("Введіть n");
       int n=sc.nextInt();
       for (int j=1;j<=n;j++)
       for(int i=j;i<=2*j;i++)
           e=e*i;
           P=P+e;
       
       System.out.println(P);
}}
